<% if @message.errors.any? %>
  <ul>
    <% @message.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div>
  <%= f.label :title, "標題" %>
  <%= f.text_field :title %>
</div>

<div>
  <%= f.label :category_id, "分類" %>
  <% Category.all.each do |c| %>
    <%= f.radio_button :category_id, c.id %><%= c.name %>
  <% end %>
</div>


<div>
  <%= f.label :content, "內文" %>
  <%= f.text_area :content %>
</div>